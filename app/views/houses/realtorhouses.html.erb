<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <thead>
  <tr>
    <th>Company</th>
    <th>Location</th>
    <th>Area</th>
    <th>Year built</th>
    <th>Style</th>
    <th>List prize</th>
    <th>Floor count</th>
    <th>Basement</th>
    <th>Owner name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @houses.each do |house| %>
    <tr>
      <td><%= @company %></td>
      <td><%= house.location %></td>
      <td><%= house.area %></td>
      <td><%= house.year_built %></td>
      <td><%= house.style %></td>
      <td><%= house.list_prize %></td>
      <td><%= house.floor_count %></td>
      <td><%= house.basement %></td>
      <td><%= house.owner_name %></td>
      <td><%= link_to 'Show', house %></td>
      <td><%= link_to 'Edit', edit_house_path(house) %></td>
      <td><%= button_to 'Destroy', house, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path %>
<%= link_to 'Back', @previous_url %>
<% if @role == "admin" %>
  <%= link_to 'Back to Dashboard', admin_path %> <br>
<% elsif @role == "realtor" %>
  <%= link_to 'Back to Dashboard', realtor_path(rel.id) %> <br>
<% end %>