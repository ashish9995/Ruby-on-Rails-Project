<p id="notice"><%= notice %></p>

<h1>Househunters</h1>

<table cellspacing="10">
  <thead>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Phone</th>
    <th>Contact method</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @househunters.each do |househunter| %>
    <tr>
      <td><%= househunter.first_name %></td>
      <td><%= househunter.last_name %></td>
      <td><%= househunter.phone %></td>
      <td><%= househunter.contact_method %></td>
      <td><%= link_to 'Show', househunter %></td>
      <td><%= link_to 'Edit', edit_househunter_path(househunter) %></td>
      <td><%= button_to 'Destroy', househunter, method: :delete, :onclick => "return confirm('Are you sure you want to delete this househunter?')" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Househunter', new_househunter_path %>
<% if @role == "admin" %>
  <%= link_to 'Back to Dashboard', admin_path %> <br>
<% end %>
