<p id="notice"><%= notice %></p>

<h1>Realtors</h1>

<table cellspacing="10">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Company</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @realtors.each do |realtor| %>
      <tr>
        <td><%= realtor.first_name %></td>
        <td><%= realtor.last_name %></td>
        <td><%= realtor.companies_id %></td>
        <td><%= realtor.phone_number %></td>
        <td><%= link_to 'Show', realtor %></td>
        <td><%= link_to 'Edit', edit_realtor_path(realtor) %></td>
        <td><%= button_to 'Destroy', realtor, method: :delete, :onclick => "return confirm('Are you sure you want to delete this realtor?')" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Realtor', new_realtor_path %>
<% if @role == "admin" %>
  <%= link_to 'Back to Dashboard', admin_path %> <br>
<% end %>
